unit uMain;

interface

uses
  Winapi.Windows, Winapi.Messages, System.SysUtils, System.Variants, System.Classes, Vcl.Graphics,
  Vcl.Controls, Vcl.Forms, Vcl.Dialogs, Vcl.StdCtrls, Vcl.ComCtrls, Vcl.ExtCtrls,shlobj,shellapi,FileCtrl,
  aes,uZip;

type
  TfMain = class(TForm)
    Panel1: TPanel;
    btnSelectDir: TButton;
    btnClose: TButton;
    btnEncrypt: TButton;
    StatusBar1: TStatusBar;
    GroupBox1: TGroupBox;
    editConfigDir: TEdit;
    GroupBox2: TGroupBox;
    memoInfo: TMemo;
    procedure btnSelectDirClick(Sender: TObject);
    procedure FormShow(Sender: TObject);
    procedure btnEncryptClick(Sender: TObject);
  private
    { Private declarations }
    mRootDir:string;
    configdir: string; // 用户选定后的目录
  public
    { Public declarations }
  end;

var
  fMain: TfMain;

implementation

{$R *.dfm}

procedure TfMain.btnEncryptClick(Sender: TObject);
begin
  zip.DirectoryCompression('C:\temp\config','C:\temp\config.dat');
  aes.EncryptFile('C:\temp\config.dat','C:\temp\config.dat.en',CONFIG_KEY);
end;

procedure TfMain.btnSelectDirClick(Sender: TObject);

begin
  configdir := '';
  if (SelectDirectory('请选择要加密的文件目录', mRootDir, configdir)) then
  begin
    editConfigDir.Text := configdir;
  end;
end;

procedure TfMain.FormShow(Sender: TObject);
begin
  mRootDir:='c:';
end;

end.
